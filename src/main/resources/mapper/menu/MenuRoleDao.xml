<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mockst.mocking.module.menu.dao.MenuRoleDao">
	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.mockst.mocking.module.menu.entity.MenuRoleEntity" id="menuRoleMap">
        <result property="id" column="id"/>
        <result property="roleId" column="role_id"/>
        <result property="menuId" column="menu_id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="Relevance_Base_Column_List">
    mr.id as mr_id,
    mr.role_id as mr_role_id,
    mr.menu_id as mr_menu_id,
    mr.create_time as mr_create_time,
    mr.update_time as mr_update_time
    </sql>
    <!-- Custom Generate Code Start-->

    <select id="findPermissionByRoleId" resultType="string">
       SELECT
            m.permission
        FROM
            tb_menu_role mr
        INNER JOIN tb_menu m ON m.id = mr.menu_id
        WHERE
            m.is_show = '1'
        AND mr.role_id = #{roleId}
    </select>
    <!-- Custom Generate Code End-->
</mapper>